#include <iostream>
using namespace std;

int odejmowanie(int a, int b) { //zwroc roznice a - b
  return a-b;
}
int mnozenie(int a, int b) {
  return a*b;
}

int dodawanie(int a, int b)
{
  return a+b;
}

void podziel_dwie_liczby(int a, int b)
{

    float wynik;

    if(b == 0)
    {
        cout << "Nie mozna dzielic przez zero!\n";
    }
    else
    {
        wynik = (float) a / (float) b;
        cout << "Wynik dzielenia: " << wynik << endl;
    }
}

int main()
{
  cout << "Prosty kalkulator" << endl;
  int a,b;
  cout << "Wprowadz pierwsza liczbe:";
  cin >> a;
  cout << "Podaj druga liczbe:";
  cout << "Wybierz opcje: +, -, *, /";
  char x;
  switch (x) {
    case '-':
      cout << "Wynik: " << odejmowanie(a,b) << endl;
      break;
  }
  return 0;
}

